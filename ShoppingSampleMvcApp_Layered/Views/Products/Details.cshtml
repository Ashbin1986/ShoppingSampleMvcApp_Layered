@model ShoppingSampleMvcApp_Layered.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="card mt-3" style="max-width: 500px;">
    <div class="card-header bg-dark text-white">
        @Model.Name
    </div>
    <div class="card-body">
        <p><strong>ID:</strong> @Model.Id</p>
        <p><strong>Price:</strong> â‚¹@Model.Price.ToString("N2")</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Category:</strong> @Model.Category</p>
    </div>
    <div class="card-footer">
        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
